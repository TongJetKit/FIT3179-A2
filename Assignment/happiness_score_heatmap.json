{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "dataset/WHR_2023.csv"
  },
  "transform": [
    {"flatten": ["happiness_score", "gdp_per_capita", "social_support", "healthy_life_expectancy", "freedom_to_make_life_choices", "generosity", "perceptions_of_corruption"]}
  ],
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "key",
      "type": "ordinal",
      "title": "Columns"
    },
    "y": {
      "field": "key",
      "type": "ordinal",
      "title": "Rows"
    },
    "color": {
      "field": "value",
      "type": "quantitative",
      "title": "Correlation",
      "scale": {"scheme": "viridis"} 
    }
  },
  "config": {
    "view": {"stroke": "transparent"}
  }
}