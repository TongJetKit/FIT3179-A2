{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GDP Per Capita for each country",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/TongJetKit/FIT3179-A2/main/Assignment/dataset/dataset_clean.csv"  
  },
  "projection": {"type":"equalEarth"},
  "params": [
      {
        "name": "Year_selection",
        "value": 2015,
        "bind": {
        "input": "select",
        "options": [
          2015,
          2016,
          2017,
          2018,
          2019,
          2020,
          2021,
          2022,
          2023
        ],
        "labels":[
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023"
        ],
      "name": "Year Selection: "
      }
      }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
      {
        "transform": [
          {
            "lookup": "Country",  
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",  
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries" 
                }
              },
      
              "key": "properties.NAME",
              "fields": ["properties", "type", "geometry"]
            }
          },
          {
            "filter": "datum.Year == Year_selection"
          }
        ],
      
        "mark": "geoshape",
        "encoding": {
          "color": {
            "field": "GDP per Capita",  
            "type": "quantitative",
            "scale": {"type": "linear", "scheme":"goldred"}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "GDP per Capita", "type": "quantitative","format": ".1f"},
            {"field": "Year", "type": "ordinal"}
          ]
        }
      },
      { 
        "transform": [{
          "filter": "datum.Year == Year_selection"
        }],
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"}
        },
        "layer": [
          {
            "transform": [
              {
                "window": [{"op": "rank", "as": "ranking"}],
                "sort": [{"field": "Happiness Score", "order": "descending"}]
              },
              {"filter": "datum.ranking == 1"},
              {
                "calculate": " datum['Country'] + ' has the highest Happiness Score: ' + datum['Happiness Score']",
                "as": "text_annotation_raw"
              },
              {
                "calculate": "split(datum.text_annotation_raw, ';')",
                "as": "text_annotation"
              }
            ],
            "layer": [
              {
                "mark": {
                  "type": "point",
                  "size": 200,
                  "shape": "diamond",
                  "color":"#040404"
                }
              },
              {
                "mark": {
                  "type": "text",
                  "align": "left",
                  "dx": -8,
                  "dy": -12,
                  "fontStyle": "italic",
                  "fontWeight": "bold",
                  "fontSize": 10.5,
                  "color": "#F8FF95"
                },
                "encoding": {"text": {"field": "text_annotation"}}
              }
            ]
          }
        ]
      }
      
      
    ],
    "config": {
      "background": "#FFD36E"
    }





    
    
  }

  
 
