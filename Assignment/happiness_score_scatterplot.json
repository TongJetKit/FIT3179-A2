{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Happiness score relationship",
    "width": 300,
    "height": 300,
    "padding": 10,
  
    "data": {
      "url": "https://raw.githubusercontent.com/TongJetKit/FIT3179-A2/main/Assignment/dataset/dataset_clean.csv"
    },
    
    "transform": [
      {"filter": "datum.Year == '2023'"},
      {
        "fold": ["GDP per Capita", "Social Support", "Life Expectancy", "Freedom", "Generosity", "Perceptions of Corruption"],
        "as": ["attribute", "value"]
      },
      {"filter": "datum.attribute == selectedY"}
      
      
    ],

    "params": [
        
        {
            "name": "selectedY",
            "value": "GDP per Capita",
            "bind": {
              "input": "select",
              "options": [
                "GDP per Capita", 
                "Social Support", 
                "Life Expectancy",
                "Freedom", 
                "Generosity", 
                "Perceptions of Corruption"
              ],
              "labels": [
                "GDP per Capita",
                "Social Support",
                "Life Expectancy",
                "Freedom",
                "Generosity",
                "Perception of Corruption"
              ],  
              "name": "Select Y data: "
            }
        }
      ],
      "layer":[
        {

          "mark": {"type": "point", "filled": true},
          "encoding": {
              "x": {"field": "Happiness Score", "type": "quantitative"},
              "y": {
                "field": "value", 
                "type": "quantitative",
                "title" : null
              },
              "tooltip": [
                {"field": "value", "type": "nominal", "title":"Selected Y"},
                {"field": "Happiness Score", "type": "quantitative"}
              ]
          }
        },
        {
          
          "mark": {"type": "text", "fontSize": 13, "align": "right","fontWeight":"normal", "x": -35},
          "encoding": {
            "y": {"value":100},
            "text": {"field": "attribute", "type": "nominal"},
            "angle": {"value": -90}
          }
        }
        
    ],
    "config": {
      "font": "sans-serif"
    }
 
    
}
