{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Perception of Corruption for each country",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/TongJetKit/FIT3179-A2/main/Assignment/dataset/dataset_clean.csv"  
  },
  "projection": {"type":"equalEarth"},
  "params": [
      {
        "name": "Year_selection",
        "value": 2015,
        "bind": {
        "input": "select",
        "options": [
          2015,
          2016,
          2017,
          2018,
          2019,
          2020,
          2021,
          2022,
          2023
        ],
        "labels":[
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023"
        ],
      "name": "Year Selection: "
      }
      }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
      {
        "transform": [
          {
            "lookup": "country",  
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",  
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries" 
                }
              },
      
              "key": "properties.NAME",
              "fields": ["properties", "type", "geometry"]
            }
          },
          {
            "filter": "datum.year == Year_selection"
          }
        ],
      
        "mark": "geoshape",
        "encoding": {
          "color": {
            "field": "perceptions_of_corruption",  
            "type": "quantitative",
            "title": "Perception of Corruption",
            "scale": {"type": "linear", "scheme":"darkred"}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "perceptions_of_corruption", "type": "quantitative", "title": "Perception of corruption"},
            {"field": "year", "type": "ordinal", "title": "Year"}
          ]
        }
      }
      
      
    ]





    
    
  }

  
 
